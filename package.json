{
  "name": "roll20-wrapper",
  "version": "1.15.0",
  "description": "Wrapper object for roll20 globals to make for easier testing etc",
  "main": "./lib/roll20.js",
  "scripts": {
    "test": "jest",
    "coverage": "jest --coverage",
    "lint": "eslint lib/**/*.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/symposion/roll20-wrapper.git"
  },
  "author": "lucian@symposion.co.uk",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/symposion/roll20-wrapper/issues"
  },
  "homepage": "https://github.com/symposion/roll20-wrapper#readme",
  "dependencies": {
    "underscore": "^1.8.3"
  },
  "devDependencies": {
    "cliff": "^0.1.10",
    "eslint": "^2.7.0",
    "eslint-config-airbnb": "^6.2.0",
    "jest": "^22.4.3",
    "jest-cli": "^22.4.3"
  },
  "jest": {
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "lib",
      "<rootDir>"
    ],
    "moduleNameMapper": {},
    "modulePathIgnorePatterns": [
      ".eslintrc.js"
    ],
    "setupFiles": [
      "<rootDir>/__config__/setup.js"
    ],
    "notify": true,
    "verbose": true,
    "collectCoverage": false,
    "coverageDirectory": "<rootDir>/build/coverage",
    "transform": {
      ".*": "<rootDir>/node_modules/babel-jest"
    }
  }
}
